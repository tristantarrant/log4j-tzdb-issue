<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="TZ">
    <Appenders>
        <!-- Colored output on the console -->
        <Console name="STDOUT">
            <PatternLayout pattern="%d{dd/MMM/yyyy:HH:mm:ss} %-5p %m%throwable%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="STDOUT" level="INFO"/>
        </Root>
    </Loggers>
</Configuration>
